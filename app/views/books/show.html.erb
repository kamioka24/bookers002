<div class="container">
	<div class="row">
		<p><%= flash[:notice] %></p>

		<%= render 'users/side', user: @my_book.user, book: @book %>

		<div class="col-xs-9">
			<table class="table table-hover table-inverse" width="600">
				<h1>Book detail</h1>
				<tr>
					<td><%= link_to user_path(@user.id) do %>
							<%= attachment_image_tag @user, :profile_image, size: "60x60", fallback: "no_image.jpg" %><br>
							<%= @user.name %>
						<% end %>
					</td>
					<td><%= link_to @my_book.title, book_path %></td>
					<td><%= @my_book.body %></td>
					<% if @my_book.user == current_user %>
						<td><%= link_to "Edit", edit_book_path(@my_book.id) %></td>
					<% end %>
					<% if @my_book.user == current_user %>
						<td><%= link_to "Destroy", book_path(@my_book.id), method: :delete, "data-confirm" => "本当に削しますか？" %></td>
					<% end %>
				</tr>
			</table>
		</div>
	</div>
</div>